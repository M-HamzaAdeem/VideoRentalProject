@model VideoRentalProject.Models.Movie
@{
    ViewBag.Title = "Details";
}

<h2>@Model.Name </h2>
<ul>
    <li>
        Genre : @String.Join(", ", Model.Genre.Select(g => g.Name)) 
    </li>
    <li>
        Release Date : @Model.ReleaseDate.ToString("MMM/dd/yyyy")
    </li>
    <li>
        Date Added : @Model.DateAdded.ToString("MMM/dd/yyyy")
    </li>
    <li>
        Number in Stock : @Model.Stock
    </li>
</ul>

