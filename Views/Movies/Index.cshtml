
@model IEnumerable<VideoRentalProject.Models.Movie>
@{
    ViewBag.Title = "Index";
}

<h2>Customers</h2>

@if (Model.Count() == 0)
{
    <p>
        There is no Movies in the List
    </p>
}
<table class=" table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Movies
            </th>
            <th>
                Genre
            </th>

        </tr>
    </thead>

    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(c.Name, "Edit", "Movies", new { id = c.Id }, null)
                </td>
                <td>
                    @String.Join(", ", c.Genre.Select(g => g.Name))

                </td>
            </tr>
        }
    </tbody>

</table>

@Html.ActionLink("Add Movie", "New", "Movies", new { @class = "btn btn-primary" })


